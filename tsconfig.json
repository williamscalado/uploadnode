{
  "compilerOptions": {
    "target": "es2017",                          
    "module": "commonjs",                     
    "lib": ["es6"],                             
    "allowJs": true,                       
    "outDir": "./dist",                        
    "rootDir": "./src",                       
    "removeComments": true,                
    "esModuleInterop": true,                  
    "resolveJsonModule": true,
    "experimentalDecorators": true,        
    "emitDecoratorMetadata": true,         
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@controllers/*": ["./src/http/controller/*"],
      "@routes/*": ["./src/routes/*"],
    }
  },
  
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_models",
    "dist"
  ]
}